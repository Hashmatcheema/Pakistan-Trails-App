# Site Configuration
NEXT_PUBLIC_SITE_URL=https://pakistantrails.com
NEXT_PUBLIC_SITE_NAME=Pakistan Trails

# Database
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Maps
# Get your access token from Mapbox: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# Email
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@pakistantrails.com

# Rate limiting (Optional but recommended in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# File Storage
CLOUDINARY_URL=your_cloudinary_url

# JWT Secret for admin authentication
JWT_SECRET=your_jwt_secret_key

# Development
NODE_ENV=development
